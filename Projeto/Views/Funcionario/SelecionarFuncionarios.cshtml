@model IEnumerable<Projeto.Models.Funcionario>

@*@{
    ViewBag.Title = "SelecionarFuncionarios";
}

<h2>SelecionarFuncionarios</h2>*@

<p>
    @Html.ActionLink("Adicionar Novo Funcionario", "AdicionarFuncionario")
</p>


<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.IdFuncionario)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
       
        @Html.HiddenFor(model => item.IdFuncionario)
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Atualizar", "AtualizarFuncionario", new { id = item.IdFuncionario }) |
                @Html.ActionLink("Excluir", "ExcluirFuncionario", new { id = item.IdFuncionario }, new { onclick = "return confirm('Você tem certeza que deseja excluir funcionário?');" })
            </td>
        </tr>
    }

</table>
